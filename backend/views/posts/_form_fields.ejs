<div class="form-group">
    <label for="title">Title</label>
    <!--작성해야 save 가능-->
    <input required value="<%= post.title %>" type="text" name="title" id="title"
    class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= post.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= post.markdown %></textarea>
</div>

<!--이전페이지로 돌아감-->
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>